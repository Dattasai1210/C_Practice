#include<stdio.h>
int main()
{
    int num,n,setbit;
    printf("Enter Number:");
    scanf("%d",&num);
    printf("Enter nth bit:");
    scanf("%d",&n);
    setbit=(1<<n)|num;
    printf("Number before %d bit:%d\n",n,num);
    printf("Number after %d bit:%d",n,setbit);
    return 0;
}

Output:
Enter Number:12
Enter nth bit:1
Number before 1 bit:12
Number after 1 bit:14
